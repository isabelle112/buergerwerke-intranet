<div class="column is-6 is-offset-3 has-text-centered">
  <h2 class="title has-text-grey"><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, class: "input", autocomplete: "email" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, class: "input", autocomplete: "off" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: "checkbox" %>
      <%= f.label :remember_me, class: 'checkbox' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "button is-link is-fullwidth" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
