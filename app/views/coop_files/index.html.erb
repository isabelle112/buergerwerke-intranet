<% title Fileclip.model_name.human(count: 2) + ' der ' + @cooperative.name %>

<p class="title is-2"><%= yield :title %></p>

<div class="tabs is-boxed">
  <ul>
  <li>
  <a href="<%= url_for controller: 'cooperatives', action: 'show', id: @cooperative.id %>">
    <span class="icon"><i class="fas fa-chevron-left"></i></span>
    <span>zur√ºck</span>
  </a>
  </li>
  </ul>
</div>


<% @files_grouped.each do |category, files| %>
<p class="title is-4"><%= category.name %></p>
<table class="table is-fullwidth is-striped is-hoverable">
  <thead>
    <tr>
      <th>Name der <%= Fileclip.model_name.human %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% files.each do |file| %>
    <tr>
      <td><% if file.name? %><%= file.name %><% else %><%= file.file.filename %><% end %></td>
      <td>
        <a href="<%= rails_blob_path(file.file, disposition: "attachment") %>" class="button is-link is-small">
          <span class="icon"><i class="fas fa-cloud-download-alt"></i></span>
          <span>Download</span>
        </a>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
