<div class="columns is-multiline filecategories">
<% categories.each do |category| %>
  <div class="column is-offset-2 is-3 is-paddingless">
    <a class="card" href="<%= url_for controller: 'fileclips', action: 'show', id: category.id %>">
      <span class="card-header">
        <p class="card-header-title"><%= category.name %></p>
      </span>
      <span class="card-content">
        <p><%= category.description %></p>
      </span>
    </a>
  </div>
<% end %>
</div>
